
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h3><%= link_to post.title, post_path(post) %></h3>
    <%= link_to "Edit #{post.title}", edit_post_path(post) %>
    <%= link_to "Delete #{post.title}", post_path(post), method: :delete %>

  <% end %>
<%else %>
  <h1>No posts yet</h1>
<% end %>

<%= link_to "New post", new_post_path %>
